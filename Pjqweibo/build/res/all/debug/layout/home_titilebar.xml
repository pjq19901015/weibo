<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/titilebar_background">
    <Button
            android:id="@+id/home_titlebar_btn_write_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/write_weibo_btn"
            android:layout_gravity="left|center_vertical"/>
    <TextView
            android:id="@+id/home_titlebar_txt_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical">
        <Button
                android:id="@+id/home_titlebar_btn_reload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/reload"/>
        <ProgressBar
                android:id="@+id/home_titlebar_pgb_reload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"/>
    </FrameLayout>
</FrameLayout>